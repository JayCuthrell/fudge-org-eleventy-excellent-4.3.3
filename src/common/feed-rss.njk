---
permalink: /rss.xml
eleventyExcludeFromCollections: true
excludeFromSitemap: true
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:media="http://search.yahoo.com/mrss/">
  <channel>
    <title>{{ meta.blog.name }}</title>
    <description>{{ meta.blog.description }}</description>
    <link>{{ meta.url }}</link>
    <atom:link href="{{ permalink | htmlBaseUrl(meta.url) }}" rel="self" type="application/rss+xml" />
    <language>{{ meta.lang or page.lang }}</language>
    <lastBuildDate>{{ collections.posts | getNewestCollectionItemDate | dateToRfc3339 }}</lastBuildDate>
    
    {%- for post in collections.posts | reverse -%}
    {%- set absolutePostUrl = post.url | absoluteUrl(meta.url) -%}
    {%- set ogImage = meta.url ~ "/assets/og-images/" ~ (post.data.title | slugify) ~ "-preview.jpeg" -%}
    <item>
      <title>{{ post.data.title }}</title>
      <link>{{ absolutePostUrl }}</link>
      <description>{{ post.templateContent | renderTransforms(post.data.page, meta.url) | htmlEntities }}</description>
      <pubDate>{{ post.date | dateToRfc3339 }}</pubDate>
      <guid isPermaLink="true">{{ absolutePostUrl }}</guid>
      
      {# Open Graph Image support for RSS readers #}
      <media:content url="{{ ogImage }}" medium="image" type="image/jpeg" />
      <media:thumbnail url="{{ ogImage }}" />
    </item>
    {%- endfor -%}
  </channel>
</rss>